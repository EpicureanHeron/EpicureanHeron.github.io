<h2>Burgers to be eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
    <p>
      {{this.id}}. {{this.burger_name}}

      <button data-id="{{this.id}}" class="devourBurger">Devour!</button>
    </p>
  </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>
    <p>
      {{this.id}}. {{this.burger_name}}

      {{!-- <button data-movieid="{{this.id}}" class="delmovie">Delete Movie!</button> --}}
    </p>
  </li>
    {{/if}}
  {{/each}}
</ul>

